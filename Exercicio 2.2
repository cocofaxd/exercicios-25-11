#include <stdio.h>

int main() {
    float distancia;
    char opcao;

    do {
        printf("Iniciando leitura do sensor...\n");

        while (1) {
            printf("Digite a distância medida (em cm): ");
            scanf("%f", &distancia);

            if (distancia < 10) {
                printf("Distância registrada: %.2f cm (menor que 10 cm). Leitura encerrada.\n", distancia);
                break;
            }

            printf("Distância registrada: %.2f cm\n", distancia);
        }

        printf("Deseja realizar outra leitura? (s/n): ");
        scanf(" %c", &opcao);

    } while (opcao == 's' || opcao == 'S');

    printf("Programa encerrado.\n");
    return 0;
}
