#include <stdio.h>

int main() {
    int passos, total = 0;

    printf("Meta diária: 10.000 passos.\n");

    while (total < 10000) {
        printf("Insira o número de passos dados: ");
        scanf("%d", &passos);

        total += passos;

        printf("Total de passos até o momento: %d\n", total);

        if (total >= 10000) {
            printf("Parabéns! Você alcançou a meta diária!\n");
        }
    }

    return 0;
}
