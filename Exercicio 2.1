#include <stdio.h>
#include <string.h>

int main() {
    int x = 0, y = 0;
    char comando[20];

    printf("Posição inicial: (0, 0)\n");

    while (1) {
        printf("Digite um comando: ");
        scanf("%s", comando);

        if (strcmp(comando, "frente") == 0) {
            if (y < 10) y++;
            else printf("Limite alcançado.\n");
        } else if (strcmp(comando, "tras") == 0) {
            if (y > 0) y--;
            else printf("Limite alcançado.\n");
        } else if (strcmp(comando, "esquerda") == 0) {
            if (x > 0) x--;
            else printf("Limite alcançado.\n");
        } else if (strcmp(comando, "direita") == 0) {
            if (x < 10) x++;
            else printf("Limite alcançado.\n");
        } else if (strcmp(comando, "sair") == 0) {
            break;
        } else {
            printf("Comando inválido.\n");
        }

        printf("Posição atual: (%d, %d)\n", x, y);
    }

    printf("Programa encerrado.\n");
    return 0;
}
